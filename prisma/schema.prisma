// Akij Venture Ltd - Project Ledger Pro
// Database Schema Definition

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
  role     String @default("VIEWER")
}

model Project {
  id                        String    @id @default(uuid())
  name                      String
  startDate                 DateTime
  endDate                   DateTime
  budgetAmount              Float     @default(0)
  advanceAmount             Float     @default(0)
  expenseAmount             Float     @default(0)
  balanceAmount             Float     @default(0)
  billSubmissionDate        DateTime?
  sopRoiEmailSubmissionDate DateTime?
  billTopSheetImage         Json?     // Stores {name: string, data: string, type: string}
  budgetCopyAttachment      Json?     // Stores {name: string, data: string, type: string}
  createdAt                 DateTime  @default(now())
}
